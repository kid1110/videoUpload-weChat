
.my-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
}
.userinfo{
		position: relative;
		height: 100%;
		margin-top: 30%;
		margin-left: 50%;
		margin-right: 50%;
		color: #fff;
}
.userinfo-avatar{
		overflow: hidden;
		width: 160rpx;
		padding: 0rpx;
		height: 160rpx;
		border-radius: 50%;
}
.avatar{
		/* transform: translate(-25rpx,-25rpx); */
		background-size: 100%;
		width: 160rpx;
		height: 160rpx;
		margin:0rpx;
		border-radius: 50%;
		border: 0px solid #fff;
}
.userinfo-name{
		display: flex;
		font-size: 30rpx;
		color: black;
		margin: 20rpx;
		text-align: center;
}
.login-button{
		margin-top: 10px;
		text-align: center;
		border-radius: 2px;
		font-size: 30rpx;
}
