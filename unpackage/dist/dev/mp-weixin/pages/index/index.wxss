.uploader-container {
  display: flex;
  width: 100%;
  margin: 8rpx;
  height: inherit;
  flex-direction: column;
}
.box-mode, .up-page .show-box {
  margin-top: 5vw;
  width: 27vw;
  height: 27vw;
  border-radius: 8rpx;
  overflow: visible;
}
.full {
  width: 100%;
  height: 100%;
}
.up-page {
  display: flex;
  flex-wrap: wrap;
  display: flex;
  width: 100%;
}
.up-page .show-box:nth-child(3n) {
  margin-right: 0;
}
.up-page .show-box {
  position: relative;
  margin-bottom: 4vw;
  margin-right: 4vw;
}
.up-page .show-box .delect-icon {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  z-index: 1000;
}
.up-page .show-box .progress-box {
  z-index: 1001;
  height: 20rpx;
  width: 100%;
  bottom: 0rpx;
  left: 0rpx;
}
.up-page .show-box .progress-box .upload-progress {
  z-index: 1002;
  height: 100%;
}
.up-btn {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-top: 200rpx;
}
.up-btn .button {
  font-size: 30rpx;
}